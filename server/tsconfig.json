{
	"include": ["./**/*.ts"],
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext"],
		"skipLibCheck": true,
		"noEmit": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"verbatimModuleSyntax": true,

		"baseUrl": ".",
		"paths": {
			"@server/*": ["./*"]
		}
	}
}
